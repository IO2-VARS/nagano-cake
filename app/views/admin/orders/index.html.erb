<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-2">
      <h1><strong>注文一覧画面</strong></h1><br>
      <table class="table table-hover">
  	    <thead>
  	      <tr>
  	  	    <th>購入日時</th>
  	  	    <th>購入者</th>
  	  	    <th>注文個数</th>
  	  	    <th>注文ステータス</th>
  	      </tr>
  	    </thead>
  	    <tbody>
  		    <% @order.each do |order| %>
  		    <tr>
  			    <td>
              <%= link_to admin_order_path(order.id) do %>
              <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
              <% end %>
            </td>
  			    <td><%= order.end_user.family_name + order.end_user.family_name %></td>
  			    <td><%= order.count %>
            <!-- <% sum = 0 %>
            <% order.order_products.each do |order_product| %>
            <% sub_total = order_product.quantity %>
            <% sum += sub_total %>
            <% end %>
            <%= sum %> -->
            <!-- viewだけの処理も残しておきます。 -->
            </td>
  			    <td><%= order.order_status_i18n %></td>
  		    </tr>
  		     <% end %>
  	     </tbody>
      </table>
    </div>
  </div>
</div>