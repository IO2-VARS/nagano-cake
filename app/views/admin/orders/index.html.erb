<div class="container">
  <div class="row">
  <h1>注文一覧画面</h1>
  <table>
  	<thead>
  	  <tr>
  	  	<th>購入日時</th>
  	  	<th>購入者</th>
  	  	<th>注文個数</th>
  	  	<th>注文ステータス</th>
  	  </tr>
  	</thead>
  	<tbody>
  		  <% @order.each do |order| %>
  		<tr>
  			<th>
          <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
          <% end %>
        </th>
  			<th><%= order.end_user.family_name + order.end_user.family_name %></th>
  			<th>
          <% sub_total = 0 %>
          <% @order_products.where(order_id: order.id).each do |order_product| %>
          <% sub_total = order_product.quantity %>
          <% sum += sub_total %>
          <% end %>
          <%= sub_total %>
        </th>
  			<th><%= order.order_status %></th>
  		</tr>
  		<% end %>
  	</tbody>
  </table>
  </div>
</div>