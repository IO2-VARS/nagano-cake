<head>
	<!-- アプリケーションhtmlに移す -->
    <script src="https://kit.fontawesome.com/24745f7779.js" crossorigin="anonymous"></script>
</head>
<h1>商品一覧画面</h1>
<%= link_to new_admin_product_path, class:"btn btn-default btn-block" do %>
	<i class="fas fa-plus-circle fa-spin fa-2x"></i>
<% end %>
<table class="table table-hover">
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @products.each do |product| %>
			<tr>
				<td><%= product.id %></td>
				<td><%= product.name %></td>
				<td><%= product.price %></td>
				<td><%= product.genre.name %></td>
				<td><%= product.is_soldout %></td>
			</tr>
		<% end %>
	</tbody>
</table>
