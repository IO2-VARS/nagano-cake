<head>
	<!-- アプリケーションhtmlに移す -->
    <script src="https://kit.fontawesome.com/24745f7779.js" crossorigin="anonymous"></script>
</head>
<div class="container">
	<div class="row">
    <h1><strong>商品一覧画面</strong></h1><br>

		<div class="col-xs-10 col-xs-offset-2">
		  <div class="row">
	      <div class="col-xs-1 col-xs-offset-11">
          <%= link_to new_admin_product_path, class:"fas fa-plus-circle fa-2x" do %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
      <table class="table table-hover">
	    <thead>
		    <tr>
			    <th>商品ID</th>
			    <th>商品名</th>
			    <th>税抜価格</th>
			    <th>ジャンル</th>
			  	<th>ステータス</th>
		    </tr>
			</thead>
			<tbody>
				<% @products.each do |product| %>
				<tr>
					<td><%= product.id %></td>
					<td><%= link_to product.name, admin_product_path(product) %></td>
					<td><%= product.price.round %></td>
					<td><%= product.genre.name %></td>
					<td><%= product.is_soldout %></td>
				</tr>
				<% end %>
			</tbody>
			</table>
		</div>
	</div>
</div>