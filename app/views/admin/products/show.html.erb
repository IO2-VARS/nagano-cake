<div class="container">
	<div class="row">
    <h1><strong>商品詳細画面</strong></h1><br>

		<div class="col-xs-10 col-xs-offset-2">
			<div class="col-xs-4">
      <%= attachment_image_tag @product, :image, :fill, 200, 200, format: "jpeg" %>
      </div>
      <div class="col-xs-6">
      	<table>
      		<tr>
            <th>商品名</th>
            <td><%= @product.name %></td>
          </tr>
          <tr>
          	<th>商品説明</th>
          	<td><%= @product.description %></td>
          </tr>
          <tr>
          	<th>ジャンル</th>
          	<td><%= @product.genre.name %></td>
          </tr>
          <tr>
            <th>税込価格(税抜価格)</th>
            <td><%= (@product.price * 1.1).round %>  (<%= @product.price %>)円</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
          	<td>
          		<% if @product.is_soldout == true %>
              売切れ
		          <% else %>
		          販売中
	            <% end %>
            </td>
          </tr>
         </table><br>
         <div class="row">
           <div class="col-xs-2 col-xs-offset-10">
             <%= link_to "編集する", edit_admin_product_path(@product), class:"btn btn-info" %>
           </div>
         </div>
      </div>
		</div>
	</div>
</div>
