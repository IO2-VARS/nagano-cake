<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-2">
	    <h1><strong>検索結果</strong></h1><br>
      <% if @product_or_end_user == "1" %>
      <h2>商品検索一覧</h2><br>
      <table class="table table-hover">
	      <thead>
		      <tr>
			      <th>商品ID</th>
			      <th>商品名</th>
			      <th>税抜価格</th>
			      <th>ジャンル</th>
			      <th>ステータス</th>
		      </tr>
	      </thead>
	      <tbody>
		      <% @products.each do |product| %>
			    <tr>
				    <td><%= product.id %></td>
				    <td><%= link_to product.name, admin_product_path(product) %></td>
				    <td><%= product.price %>円</td>
				    <td><%= product.genre.name %></td>
				    <% if product.is_soldout == true %>
						<td><p>販売停止中</p></td>
					  <% else %>
						<td><p>販売中</p></td>
					  <% end %>
			    </tr>
		      <% end %>
	      </tbody>
       </table>

       <% else %>
       <h2>会員検索一覧</h2><br>
	     <table class="table table-hover">
				 <thead>
					 <tr>
						  <th>会員ID</th>
						  <th>氏名</th>
						  <th>メールアドレス</th>
						  <th>ステータス</th>
					 </tr>
				  </thead>

				  <tbody>
					  <% @end_users.each do |end_user| %>
						  <tr>
							  <td><%= end_user.id %></td>
							  <td><%= link_to end_user.family_name + end_user.first_name, admin_end_user_path(end_user) %></td>
							  <td><%= end_user.email %></td>
							  <td>
								  <% if end_user.is_unsubscribed == false %>
									<p>有効</p>
								  <% else %>
									<p>退会済</p>
								  <% end %>
							  </td>
						  </tr>
					  <% end %>
				  </tbody>
			   </table>
      <% end %>
    </div>
  </div>
</div>