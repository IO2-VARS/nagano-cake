<div class="container">
	<div class="row">
	<h1>検索結果</h1>
  <% if @product_or_end_user == "1" %>
  <h2>商品一覧</h2>
    <table class="table table-hover">
	    <thead>
		    <tr>
			    <th>商品ID</th>
			    <th>商品名</th>
			    <th>税抜価格</th>
			    <th>ジャンル</th>
			    <th>ステータス</th>
		    </tr>
	    </thead>
	    <tbody>
		  <% @products.each do |product| %>
			  <tr>
				  <td><%= product.id %></td>
				  <td><%= link_to product.name, admin_product_path(product) %></td>
				  <td><%= product.price %></td>
				  <td><%= product.genre.name %></td>
				  <td><%= product.is_soldout %></td>
			  </tr>
		  <% end %>
	    </tbody>
    </table>

   <% else %>
   <h2>会員一覧</h2>
	   <table class="table table-hover">
				<thead>
					<tr>
						<th>会員ID</th>
						<th>氏名</th>
						<th>メールアドレス</th>
						<th>ステータス</th>
					</tr>
				</thead>

				<tbody>
					<% @end_users.each do |end_user| %>
						<tr>
							<td><%= end_user.id %></td>
							<td><%= link_to end_user.family_name + end_user.first_name, admin_end_user_path(end_user) %></td>
							<td><%= end_user.email %></td>
							<td>
								<% if end_user.is_unsubscribed == false %>
									<p>有効</p>
								<% else %>
									<p>退会済</p>
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
    <% end %>

  </div>
</div>