<div class="container">
    <div class="row">
      <h1><strong>ジャンル/追加・一覧画面</strong></h1><br>
        <div class="col-xs-10 col-xs-offset-2">

          <%= form_for(@genre, url: admin_genres_path) do |f| %>
		  <% if @genre.errors.any? %>
          <div id="error_explanation">
            <h2><%= @genre.errors.count %>件のエラーが発生しました。</h2>
            <ul>
              <% @genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>

        <p style="display: inline-block;">
          </style>ジャンル</p>
        <%= f.text_field :name %>
        <label><%= f.radio_button :is_invalid, false %>有効</label>
        <label><%= f.radio_button :is_invalid, true %>無効</label>
        <%= f.submit "新規追加登録", class:"btn btn-info" %>
        <% end %><br>

        <table class="table table-hover">
    	  <thead>
    		<tr>
    		  <th>ジャンル</th>
    		  <th>状態</th>
              <th></th>
    		 </tr>
    	  </thead>
    	  <tbody>
    		<% @genres.each do |genre| %>
    		<tr>
    		  <td><%= genre.name %></td>
    		  <% if genre.is_invalid == true  %>
    		  <td>無効</td>
    		  <% else %>
    		  <td>有効</td>
    		  <% end %>
              <td><%= link_to "編集する", edit_admin_genre_path(genre),class:"btn btn-info" %></td>
    		</tr>
    		<% end %>
    	  </tbody>
        </table>
     </div>
  </div>
</div>