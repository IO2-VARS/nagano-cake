<h1>ジャンル　編集画面</h1>

	<%= form_for(@genre, url: admin_genre_path) do |f| %>
		<% if @genre.errors.any? %>
        	<div id="error_explanation">
            	<h2><%= @genre.errors.count %>件のエラーが発生しました。</h2>
              	<ul>
                	<% @genre.errors.full_messages.each do |message| %>
                		<li><%= message %></li>
                	<% end %>
             	</ul>
            </div>
        <% end %>
        <h4>ジャンル</h4>
        <%= f.text_field :name %>
        <label><%= f.radio_button :is_invalid, false %>有効</label>
        <label><%= f.radio_button :is_invalid, true %>無効</label>
        <%= f.submit "変更を保存", class:"btn btn-primary btn-block" %>
    <% end %>