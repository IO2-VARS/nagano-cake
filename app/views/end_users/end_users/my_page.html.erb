  <div class="container">
    <div class="row">
      <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
      <% end %>

      <h1><strong>マイページ</strong></h1><br>
      <div class="col-xs-10 col-xs-offset-2">
        <h2>登録情報
        <%= link_to "編集する", my_page_edit_path, class:"btn btn-primary" %>
        <%= link_to "パスワードを変更する",edit_end_user_registration_path, class:"btn btn-primary" %>
        </h2>

      <table class="table">
	      <tr>
	      	<th>氏名</th>
	      	<td><%= current_end_user.family_name %>  <%= current_end_user.first_name %></td>
	      </tr>
	      <tr>
	      	<th>カナ</th>
	      	<td><%= current_end_user.family_name_kana %>  <%= current_end_user.first_name_kana %></td>
	      </tr>
	      <tr>
	      	<th>郵便番号</th>
	      	<td><%= current_end_user.zip_code %></td>
	      </tr>
        <tr>
        	<th>住所</th>
        	<td><%= current_end_user.address %></td>
        </tr>
        <tr>
        	<th>電話番号</th>
        	<td><%= current_end_user.phone_number %></td>
        </tr>
        <tr>
        	<th>メールアドレス</th>
        	<td><%= current_end_user.email %></td>
        </tr>
      </table><br>

      <h3>配送先一覧
        <%= link_to "一覧を見る",shipping_addresses_path, class:"btn btn-primary" %>
      </h3>
 　　 <h3>注文履歴　
        <%= link_to "一覧を見る",orders_path, class:"btn btn-primary" %>
      </h3>

    </div>
  </div>
</div>