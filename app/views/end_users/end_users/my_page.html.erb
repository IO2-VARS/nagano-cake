  <div class="container">
    <div class="row">


      <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
      <% end %>

      <h2>マイページ</h2>

      <h2>登録情報
      <%= link_to "編集する", my_page_edit_path %>
      <%= link_to "パスワードを変更する",edit_end_user_password_path %>
      </h2>

      <table class="table">
	      <tr>
	      	<th>氏名</th>
	      	<th><%= current_end_user.family_name %>  <%= current_end_user.first_name %></th>
	      </tr>
	      <tr>
	      	<th>カナ</th>
	      	<th><%= current_end_user.family_name_kana %>  <%= current_end_user.first_name_kana %></th>
	      </tr>
	      <tr>
	      	<th>郵便番号</th>
	      	<th><%= current_end_user.zip_code %></th>
	      </tr>
        <tr>
        	<th>住所</th>
        	<th><%= current_end_user.address %></th>
        </tr>
        <tr>
        	<th>電話番号</th>
        	<th><%= current_end_user.phone_number %></th>
        </tr>
        <tr>
        	<th>メールアドレス</th>
        	<th><%= current_end_user.email %></th>
        </tr>
      </table>

      <h2>配送先一覧
      <%= link_to "一覧を見る",shipping_addresses_path %>
      </h2>

      <h2>注文履歴
      <%= link_to "一覧を見る",orders_path %>
      </h2>

    </div>
  </div>