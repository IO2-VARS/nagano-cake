<div class="hensyu">
	<div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-2">
      <h1><strong>登録情報編集</strong></h1><br>

      <%= form_for(current_end_user) do |f| %>

      <div class="form-group">
        <div class="field">
        <%= f.label :"名前" ,class: "col-xs-3"%>
        <div class="col-xs-9">
          <div class="row">
              <label class="col-xs-2">(姓)</label>
            <div class="col-xs-3">
              <%= f.text_field :family_name ,placeholder:"(姓)"%>
            </div>
              <label class="col-xs-2">(名)</label>
            <div class="col-xs-2">
              <%= f.text_field :first_name ,placeholder:"(名)"%>
            </div>
          </div>
        </div>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <%= f.label :"フリガナ" ,class: "col-xs-3"%>
          <div class="col-xs-9">
            <div class="row">
              <label class="col-xs-2">(セイ)</label>
            <div class="col-xs-3">
              <%= f.text_field :family_name_kana ,placeholder:"(セイ)"%>
            </div>
              <label class="col-xs-2">(メイ)</label>
            <div class="col-xs-2">
              <%= f.text_field :first_name_kana ,placeholder:"(メイ)"%>
            </div>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <div class="col-xs-10">
            <div class="row">
              <%= f.label :"メールアドレス",class: "col-xs-4" %>
            <div class="col-xs-7 col-xs-offset-1">
              <%= f.email_field :email, autocomplete: "email",placeholder:"メールアドレス", class:"col-xs-9" %>
            </div>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <div class="col-xs-10">
            <div class="row">
              <%= f.label :"郵便番号(ハイフンなし)",class: "col-xs-4" %>
            <div class="col-xs-7 col-xs-offset-1">
              <%= f.text_field :zip_code,placeholder:"郵便番号(ハイフンなし)", class:"col-xs-9" %>
            </div>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <div class="col-xs-10">
            <div class="row">
              <%= f.label :"住所",class: "col-xs-4"  %>
            <div class="col-xs-7 col-xs-offset-1">
              <%= f.text_field :address,placeholder:"住所", class:"col-xs-9" %>
            </div>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <div class="col-xs-10">
            <div class="row">
              <%= f.label :"電話番号(ハイフンなし)",class: "col-xs-4" %>
            <div class="col-xs-7 col-xs-offset-1">
              <%= f.text_field :phone_number,placeholder:"電話番号(ハイフンなし)", class:"col-xs-9"%>
            </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4 col-xs-offset-2">
          <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
        </div>
        <div class="col-xs-4 col-xs-offset-2">
          <%= link_to "退会する", check_path, class: "btn btn-danger" %>
        </div>
      </div>
      <% end %>

      </div>
    </div>
  </div>
</div>


