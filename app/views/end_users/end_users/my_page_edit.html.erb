<div class="hensyu">

<h3>登録情報編集</h3>

<%= form_for(current_end_user) do |f| %>


<p><strong>名前</strong></p>
<p>(姓)</p>
<p><%= f.text_field :family_name %></p>
<p>(名)</p>
<p><%= f.text_field :first_name %></p>

<p><strong>フリガナ</strong></p>
<p>(セイ)</p>
<P><%= f.text_field :family_name_kana %></P>
<p>(メイ)</p>
<p><%= f.text_field :first_name_kana %></p>

<p>メールアドレス</p>
<p><%= f.email_field :email, autocomplete: "email" %></p>

<p>郵便番号(ハイフンなし)</p>
<p><%= f.text_field :zip_code %></p>


<p>住所</p>
<p><%= f.text_field :address %></p>

<p>電話番号(ハイフンなし)</p>
<p><%= f.text_field :phone_number %></p>




<%= f.submit "編集内容を保存する", class: "btn btn-success " %>

<%= link_to "退会する", check_path, class: " btn btn-danger "%>

<% end %>

</div>


