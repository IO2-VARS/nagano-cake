<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-2">
    <h1><strong>新規会員登録</strong></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <div class="field">
        <%= f.label :"名前" ,class: "col-xs-3"%>
        <div class="col-xs-9">
          <div class="row">
            <label class="col-xs-2">(姓)</label>
          <div class="col-xs-3">
            <%= f.text_field :family_name ,placeholder:"(姓)"%>
          </div>
            <label class="col-xs-2">(名)</label>
          <div class="col-xs-2">
            <%= f.text_field :first_name ,placeholder:"(名)"%>
          </div>
          </div>
        </div>
       </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :"フリガナ" ,class: "col-xs-3"%>
        <div class="col-xs-9">
          <div class="row">
            <label class="col-xs-2">(セイ)</label>
          <div class="col-xs-3">
            <%= f.text_field :family_name_kana ,placeholder:"(セイ)"%>
          </div>
            <label class="col-xs-2">(メイ)</label>
          <div class="col-xs-2">
            <%= f.text_field :first_name_kana ,placeholder:"(メイ)"%>
          </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <div class="col-xs-9">
          <div class="row">
            <%= f.label :"メールアドレス",class: "col-xs-3" %>
          <div class="col-xs-7 col-xs-offset-1">
            <%= f.email_field :email, autocomplete: "email",placeholder:"メールアドレス", class:"col-xs-9" %>
          </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <div class="col-xs-9">
          <div class="row">
            <%= f.label :"郵便番号",class: "col-xs-3" %>
          <div class="col-xs-7 col-xs-offset-1">
            <%= f.text_field :zip_code,placeholder:"郵便番号(ハイフンなし)", class:"col-xs-9" %>
          </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <div class="col-xs-9">
          <div class="row">
            <%= f.label :"住所",class: "col-xs-3"  %>
          <div class="col-xs-7 col-xs-offset-1">
            <%= f.text_field :address,placeholder:"住所", class:"col-xs-9" %>
          </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <div class="col-xs-9">
          <div class="row">
            <%= f.label :"電話番号",class: "col-xs-3" %>
          <div class="col-xs-7 col-xs-offset-1">
            <%= f.text_field :phone_number,placeholder:"電話番号(ハイフンなし)", class:"col-xs-9"%>
          </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <div class="col-xs-9">
          <div class="row">
            <%= f.label :"パスワード",class: "col-xs-3" %>
          <div class="col-xs-7 col-xs-offset-1">
            <%= f.password_field :password, autocomplete: "new-password",placeholder:"パスワード(6文字以上)", class:"col-xs-9" %>
          </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <div class="col-xs-9">
          <div class="row">
            <%= f.label :"パスワード確認用",class: "col-xs-3" %>
          <div class="col-xs-7 col-xs-offset-1">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"パスワード確認用", class:"col-xs-9" %>
          </div>
          </div>
        </div>
      </div>
    </div>
    </div><br>

    <div class="col-xs-8 col-xs-offset-4">
      <div class="actions">
        <%= f.submit "新規登録",class:"btn btn-success col-xs-4" %><br>
      </div>
    <% end %>
    </div>

    <div class="row">
      <div class="col-xs-6 col-xs-offset-2">
        <h2>既に登録済みの方</h2>
          <%= link_to "こちら" ,new_end_user_session_path %>からログインしてください。
      </div>
    </div>
  </div>
</div>


