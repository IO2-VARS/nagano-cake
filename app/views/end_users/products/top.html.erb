<% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
      <% end %>

<div class="container">
	<div class="row">

		<div class="col-xs-3">
			<%= render 'admin/genres/search', genres: @genres %>
		</div>

		<div class="col-xs-9">
		<p>
			ようこそ、NaganoCakeへ！<br>
			このサイトは、ケーキ販売のECサイトになります。<br>
			会員でない方も商品の閲覧はできますが<br>
			購入には会員登録が必要になります。<br>
		</p>

		<h2>オススメ商品</h2>
		<div class= "row">
		<!-- first(4)"４件までシャッフルループさせる" -->
				<% @products.shuffle.first(4).each do |product| %>
		 			<div class= "col-xs-3">
		 					<%= attachment_image_tag product, :image, :fill, 50, 50, size: "120x80" %>
		 					<p>商品名 <%= product.name %></p>
		 					<P>¥ <%= product.price * 1.1 %></P>
		 			</div>
		 		<% end %>


		<%= link_to "もっと見る" ,products_path %>

		</div>



		</div>
	</div>
</div>
