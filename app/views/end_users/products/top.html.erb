


<% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
      <% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-12 top_image">
			<div id="theTarget">
				<div class="image1"></div>
				<div class="image2"></div>
				<div class="image3"></div>
				<div class="image4"></div>
				<div class="image5"></div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-3">
			<%= render 'admin/genres/search', genres: @genres %>
		</div>

		<div class="col-xs-9">
			<p>
				ようこそ、NaganoCakeへ！<br>
				このサイトは、ケーキ販売のECサイトになります。<br>
				会員でない方も商品の閲覧はできますが<br>
				購入には会員登録が必要になります。<br>
			</p>
		</div>
	</div>

	<div class= "row">
		<div class="col-xs-12">
			<h2>オススメ商品</h2>
	<!-- first(4)"４件までシャッフルループさせる" -->
			<% @products.shuffle.first(4).each do |product| %>
	 			<div class= "col-xs-3">
	 					<%= attachment_image_tag product, :image, :fill, 50, 50, size: "120x80" %>
	 					<p>商品名 <%= product.name %></p>
	 					<P>¥ <%= product.price * 1.1.round %></P>
	 			</div>
	 		<% end %>

			<%= link_to "もっと見る" ,products_path %>

		</div>
	</div>
</div>
