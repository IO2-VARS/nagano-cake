<div class="container">
	<div class="row">

		<div class="col-md-3">
			<%= render 'admin/genres/search', genres: @genres %>
		</div>
		<div class="col-md-9">
					<% if params[:id] %>
					<h1><%= @genre.name %>一覧</h1>
					<% else %>
					<h1><strong> 商品一覧 </strong></h1>
					<% end %>

				<h3>全 <%= @products.count %> 件</h3>

					<div class="row">
						<% @products.each do |product| %>
							<div class= "product-box">
								<div class="col-md-3">
									<%= link_to product_path(product.id) do %>
										<%= attachment_image_tag(product, :image, :fill, 150, 150) %>
									<% end %>
									<p><%= product.name %></p>
									<p>¥<%= (product.price * 1.1).round %></p>
								</div>
							</div>
						<% end %>
					</div>
		</div>
	</div>
</div>
