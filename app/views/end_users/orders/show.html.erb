<div class="container">
	<div class="row">
		<h1>注文履歴詳細</h1>
		<div class="col-xs-9">
			<h2>注文情報</h2>
			<table class="table table-hover">
				<tr>
					<th>注文日</th>
					<td><%= @order.created_at %></td>
				</tr>
				<tr>
					<th>配送先</th>
					<td>
						<p><%= @order.zip_code %></p>
						<p><%= @order.address %></p>
						<p><%= @order.name %></p>
					</td>
				</tr>
				<tr>
					<th>支払い方法</th>
					<td><%= @order.payment_method_i18n %></td>
				</tr>
				<tr>
					<th>ステータス</th>
					<td><%= @order.order_status_i18n %></td>
				</tr>
			</table>
		</div>
		<div class="col-xs-3">
			<h2>請求情報</h2>
			<table class="table table-hover">
				<tr>
					<th>商品合計</th>
					<td><%= @order.total_fee - @order.postage %></td>
				</tr>
				<tr>
					<th>配送料</th>
					<td><%= @order.postage %></td>
				</tr>
				<tr>
					<th>ご請求金額</th>
					<td><%= @order.total_fee %></td>
				</tr>
			</table>
		</div>
	</div>
	<div class="row">
		<h2>注文内容</h2>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>商品</th>
					<th>単価(税込)</th>
					<th>個数</th>
					<th>小計</th>
				</tr>
			</thead>
			<tbody>
				<% @order.order_products.each do |op| %>
					<tr>
						<td><%= op.product.name %></td>
						<td><%= op.price * 1.1 %></td>
						<td><%= op.quantity %></td>
						<td><%= op.price * 1.1 * op.quantity %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>





