<h1>注文履歴一覧</h1>

	<table class="table table-hover">
		<thead>
			<tr>
				<th>注文日</th>
				<th>配送先</th>
				<th>注文商品</th>
				<th>支払金額</th>
				<th>ステータス</th>
				<th>注文詳細</th>
			</tr>
		</thead>
		<tbody>
			<% @end_user.orders.each do |order|%>
				<tr>
					<td><%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
					<td>
						<p><%= order.zip_code %></p>
						<p><%= order.address %></p>
						<p><%= order.name %></p>
					</td>
					<td>
						<% order.order_products.each do |op| %>
							<p><%= op.product.name %></p>
						<% end %>
					</td>
					<td><%= order.total_fee %></td>
					<td><%= order.order_status %></td>
					<td><%= link_to "表示する", order_path(order) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>