<div class="container">
	<div class="row">
		<h1><strong>配送先編集</strong></h1><br>

     <div class="col-xs-9 col-xs-offset-3">
     	<table>
     	<tr class="form-space">
        <%= form_for(@shipping_address) do |address| %>
        <div class="form-group">
          <th class="col-xs-3">郵便番号（ハイフンなし）</th>
          <td class="col-xs-9">
          	<%= address.text_field :zip_code, class:"col-xs-6" %></td>
          </div>
      </tr>
      <tr class="form-space">
    	  <div class="form-group">
    	    <th class="col-xs-3">住所　　　　　　　　　　</th>
          <td class="col-xs-9">
          <%= address.text_field :address, class:"col-xs-6" %>
          </td>
          </div>
      </tr>
      <tr class="form-space">
        <div class="form-group">
          <th class="col-xs-3">宛名　　　　　　　　　　</th>
      		<td class="col-xs-9">
      			<%= address.text_field :name, class:"col-xs-6" %>
      		</td>
      	</div>
    	</tr>
      </table>

     <div class="col-xs-3 col-xs-offset-9">
       <%= address.submit "編集する", class:"btn btn-primary" %>
     </div>

     <% end %>
   </div>
  </div>
</div>