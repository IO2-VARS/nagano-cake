<h2>配送先登録/一覧</h2>

<%= form_for(@shipping_address) do |address| %>

<h4>郵便番号(ハイフンなし)</h4><%= address.text_field :zip_code %>

<h4>住所</h4><%= address.text_field :address %>

<h4>宛名</h4><%= address.text_field :name %>　<%= address.submit "登録する" %>

<% end %>

<table class= "table" >

<thead>
     <tr>
      	<th>郵便</th>
 	    <th>住所</th>
 	    <th>宛名</th>
        <th colspan="3"></th>
     </tr>
 </thead>

<tbody>

     <% @end_user.shipping_addresses.each do |address| %>

        <tr>
           <td><%= address.zip_code %></td>
           <td><%= address.address %></td>
           <td><%= address.name %></td>
           <td>
           	   <%= link_to "編集", edit_shipping_address_path(address.id),class: "btn-sm btn-success " %>
               <%= link_to "削除", shipping_address_path(address), method: :delete, "data-confirm" => "Are you sure？", class: " btn-sm btn-danger " %>
			</td>
        </tr>

     <% end %>

 </tbody>
</table>