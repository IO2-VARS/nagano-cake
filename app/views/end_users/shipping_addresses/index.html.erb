<div class="container">
  <div class="row">
  <h1><strong>配送先登録/一覧</strong></h1><br>

  <div class="col-xs-9 col-xs-offset-3">
  <%= form_for(@shipping_address) do |address| %>
  <table>
    <tr>
  <div class="form-group">
  <th class="col-xs-3">郵便番号(ハイフンなし)</th>
  <td class="col-xs-9">
    <%= address.text_field :zip_code, class:"col-xs-6" %>
  </td>
   </div>
 </tr>
 <tr>
  <div class="form-group">
  <th class="col-xs-3">住所　　　　　　　　　</th>
  <td class="col-xs-9">
  <%= address.text_field :address, class:"col-xs-6"%>
  </td>
  </div>
</tr>
<tr>
<div class="form-group">
  <th class="col-xs-3">宛名　　　　　　　　　</th>
  <td class="col-xs-9">
  <%= address.text_field :name, class:"col-xs-6" %>
</td>
</div>
</tr>
</table>
   
  <div class="col-xs-3 col-xs-offset-9">
    <%= address.submit "登録する", class:"btn btn-primary" %><br>
  </div>

  <% end %>

  <table class= "table" >

    <thead>
      <tr>
        <th>郵便</th>
 	      <th>住所</th>
 	      <th>宛名</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @end_user.shipping_addresses.each do |address| %>
        <tr>
          <td><%= address.zip_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
           	  <%= link_to "編集", edit_shipping_address_path(address.id),class: "btn-sm btn-success " %>
              <%= link_to "削除", shipping_address_path(address), method: :delete, "data-confirm" => "Are you sure？", class: " btn-sm btn-danger " %>
			    </td>
        </tr>

     <% end %>

    </tbody>
  </table>

    </div>
  </div>
</div>